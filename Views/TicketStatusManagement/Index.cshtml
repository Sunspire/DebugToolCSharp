@model DebugToolCSharp.Models.TicketStatusManagement
@{
    ViewBag.Title = "Ticket Status Management";
}
<div>
    <h2>Ticket Status Management</h2>
</div>
<div>
    @Html.ActionLink("Add Ticket Status", "AddTicketStatus", "TicketStatusManagement")
    <br /><br />
</div>
<div>Click on a ticket status to edit it.</div>
<div>
    @{
        foreach (var ts in Model.TicketStatus)
        {
            <div>
                @Html.ActionLink(ts.Description, "EditTicketStatus/" + ts.Id, "TicketStatusManagement")
            </div>
        }
    }

</div>